{
    "plugins": ["jasmine"],
    "extends": ["airbnb-base", "plugin:jasmine/recommended"],
    "rules": {
        "indent": ["error", 4],
        "no-param-reassign": [2, { "props": false }],
        "no-alert": "off",
        "prefer-template": "off",
        "prefer-destructuring": "off"
    },
    "globals": {
        "angular": true,
        "alert": true,
        "FormData": true,
        "document": true
    },
    "env": {
        "jasmine": true
    }
}